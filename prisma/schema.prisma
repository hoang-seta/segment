generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  videoID           String      @id
  ingestDate        String
  resourceName      String
  owner             String
  Title             String
  Duration          BigInt
  FileName          String
  BroadcastStandard String
  status            VideoStatus @default(WAITING)
  error             String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Clip {
  id           BigInt   @id @default(autoincrement())
  videoID      String
  clipPath     String?
  xmlPath      String?
  driveClipUrl String?
  startTime    String
  endTime      String
  isPassed          Boolean?
  qaCompletedAt     DateTime?
  qaComment    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum VideoStatus {
  WAITING
  READY
  PROCESSING
  COMPLETED
  FAILED
}
